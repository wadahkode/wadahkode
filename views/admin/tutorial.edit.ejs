<%- include('partials/head') -%>

<header><%- include('../components/navbar-admin') -%></header>

<div
  class="grid grid-cols-1 md:grid md:grid-cols-3 md:gap-4 md:pr-10 mt-16 w-100"
>
  <main
    class="col-span-6 md:col-span-auto mt-14 mb-20 md:ml-72 h-screen mx-4 md:mt-5"
  >
    <div class="hidden">
      Welcome back <b class="session-username"><%= username %></b>
    </div>
    <div class="mt-1">
      <h1 class="mb-3">Update tutorial</h1>
      <% data.forEach(function(tutorial, key) { %>
      <form
        action="/admin/tutorial/update"
        class="bg-gray-100 border py-2 px-3"
        method="POST"
      >
        <input type="hidden" name="id" value="<%= tutorial.id %>" />
        <div>
          <legend>Judul</legend>
          <input
            type="text"
            name="judul"
            class="border rounded px-4 py-2 w-full focus:outline-none focus:ring-1 focus:ring-blue-300"
            value="<%= tutorial.judul %>"
          />
        </div>
        <div class="my-3">
          <legend>Kategori</legend>
          <select
            name="kategori"
            class="border rounded px-4 py-2 w-full focus:outline-none focus:ring-1 focus:ring-blue-300"
          >
            <% if (tutorial.kategori == 'games') { %>
            <option value="games">Game</option>
            <% } %>
            <option value="programing">Programing</option>
          </select>
        </div>
        <div id="editor" name="editor" class="mt-3 remove-tag z-10">
          <%= tutorial.isi %>
        </div>
        <div class="mt-3">
          <legend>Penulis</legend>
          <input
            type="text"
            name="penulis"
            class="border rounded px-4 py-2 d-none"
            value="<%= tutorial.penulis %>"
          />
        </div>
        <div class="mt-5">
          <button
            type="submit"
            class="border rounded bg-red-600 p-1 w-24 text-white"
          >
            Update
          </button>
        </div>
      </form>
      <% }) %>
    </div>
  </main>

  <%- include('../components/sidebar-admin') -%>
</div>

<%- include('partials/footer') -%>
